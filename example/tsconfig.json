{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "paths": {
      "@zilol-native/runtime": ["../packages/runtime/src/index.ts"],
      "@zilol-native/nodes": ["../packages/nodes/src/index.ts"],
      "@zilol-native/layout": ["../packages/layout/src/index.ts"],
      "@zilol-native/renderer": ["../packages/renderer/src/index.ts"],
      "@zilol-native/platform": ["../packages/platform/src/index.ts"],
      "@zilol-native/gestures": ["../packages/gestures/src/index.ts"],
      "@zilol-native/components": ["../packages/components/src/index.ts"],
      "@zilol-native/animation": ["../packages/animation/src/index.ts"]
    }
  },
  "include": [
    "app/**/*.ts",
    "../packages/layout/src/YogaJSI.d.ts",
    "../packages/platform/src/SkiaJSI.d.ts"
  ]
}
