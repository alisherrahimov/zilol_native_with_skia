{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "composite": true
    },
    "references": [
        {
            "path": "../runtime"
        }
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "__tests__",
        "dist"
    ]
}